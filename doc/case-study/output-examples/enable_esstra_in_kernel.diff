diff -bur linux-hwe-6.8-6.8.0_original/Makefile linux-hwe-6.8-6.8.0/Makefile
--- linux-hwe-6.8-6.8.0_original/Makefile	2025-10-24 07:14:29.655328340 +0000
+++ linux-hwe-6.8-6.8.0/Makefile	2025-11-06 10:53:37.366000895 +0000
@@ -809,6 +809,28 @@
 	/bin/false)
 
 endif # may-sync-config
+
+ifeq ($(CONFIG_ESSTRA),y)
+# Detect GCC info
+GCC_VERSION := $(shell gcc -dumpversion)
+GCC_ARCH := $(shell gcc -dumpmachine)
+
+# Construct plugin path
+ESSTRA_PLUGIN_PATH := /usr/local/lib/gcc/$(GCC_ARCH)/$(GCC_VERSION)/plugin/esstracore.so
+
+# Check if plugin exists, else error out
+ifeq ("$(wildcard $(ESSTRA_PLUGIN_PATH))","")
+$(error ESSTRA plugin not found at $(ESSTRA_PLUGIN_PATH). Please install esstra plugin.)
+endif
+
+ESSTRA_FLAGS := -fplugin=$(ESSTRA_PLUGIN_PATH) -Wno-error
+export ESSTRA_FLAGS
+# Apply flags to the host tools build
+KBUILD_HOSTCFLAGS += $(ESSTRA_FLAGS)
+KBUILD_HOSTCXXFLAGS += $(ESSTRA_FLAGS)
+
+KBUILD_CFLAGS += $(ESSTRA_FLAGS)
+endif
 endif # need-config
 
 KBUILD_CFLAGS	+= -fno-delete-null-pointer-checks
